<Window x:Class="ClietnCDN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClietnCDN"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="authorization" HorizontalAlignment="Left" Margin="225,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="146,62,0,0" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Top" Width="234" SpellCheck.IsEnabled="True" UndoLimit="60" Cursor="None" Opacity="0.6"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="146,137,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="234" Opacity="0.6"/>
        <Button x:Name="signIn" Content="Войти" HorizontalAlignment="Left" Margin="225,189,0,0" VerticalAlignment="Top" Width="75" Click="signIn_Click"/>

    </Grid>
</Window>
